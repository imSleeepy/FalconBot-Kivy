#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
#:import Window kivy.core.window.Window
#:import get_color_from_hex kivy.utils.get_color_from_hex

#User Response Card Design
<User>:
    size_hint_y: None
    height: user.height
    size_hint_x: 0.6
    adaptive_height: True
    pos_hint: {'center_x': 0.7}

    canvas.before:
        Color:
            rgba: 55/255, 66/255, 111/255, 1
        Line:
            width: 2  
            rounded_rectangle: self.x, self.y, self.width, self.height, 17
        Color:
            rgba: 1, 1, 1, 1  
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]

    MDScreen:
        radius: dp(25)
        MDLabel:
            id: user
            text: root.text
            color: 55/255, 66/255, 111/255, 1
            font_size: dp(15)
            valign: "middle"
            halign: 'right'       
            padding: [15, 15]    
            size_hint_y: None
            height: self.texture_size[1] + 2*self.padding[1]

#Bot Response Card Design            
<Response>:
    size_hint_y: None
    height: bot.height
    size_hint_x: 0.6
    adaptive_height:True
    pos_hint: {'center_x': 0.3}
    MDScreen:
        md_bg_color: get_color_from_hex("#7099d7")
        radius: dp(25)
        
        MDLabel:
            id: bot
            text: root.text
            color: 1,1,1,1 
            font_size:dp(15)
            valign: "middle"
            halign: 'left'
            padding: [15, 15]
            size_hint_y: None
            height: self.texture_size[1] + 2*self.padding[1]

#The Whole Ass Screen Design   
<ChatScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing:dp(20)
        md_bg_color: get_color_from_hex("#fefefe")

        MDBoxLayout:
            pos_hint: {'x': 0, 'top': 1}
            size_hint_y: None
            height: dp(40)  
            padding: dp(16)  
            
            MDLabel:
                markup: True
                text: "[b]FalconBot[/b]"
                font_size: dp(24)
                color: 55/255, 66/255, 111/255, 1
                halign: "left"  
                valign: "middle"

            Button:
                text: "Reset"
                md_bg_color: get_color_from_hex("#37426F")
                theme_text_color: "Custom"
                text_color: (1, 1, 1, 1)
                size_hint: None, None
                width: dp(90)  
                height: dp(40)  
                pos_hint: {'right': 1, 'top': 1}
                padding: [dp(8), dp(6)]
                on_release: root.reset_chat()
   
        ScrollView:
            MDBoxLayout:              
                id: chat_area
                adaptive_height:True
                orientation: 'vertical'
                padding:dp(20)
                spacing:dp(12)
                
        MDBoxLayout:
            orientation: "horizontal"
            padding: dp(23)
            spacing: dp(10)
            size_hint_y: None 
            height: 55 

            TextInput:
                id: message
                hint_text: "Type here..."
                font_size: dp(15)
                multiline: False
                size_hint_y: None 
                height: dp(38)         
                text_color_focus: 55/255, 66/255, 111/255, 1

            Button:
                text: "Send"
                on_press: root.show_user_input()
                size_hint_x: None
                size_hint_y: None  
                width: dp(70)
                height: dp(38) 

            
